<!DOCTYPE html>
<html lang="tr-TR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <title>{{title}}</title>
</head>
<body>
<div class="container">
    <div class="card my-3">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Mecra: {{mediaType}}</h6>
            <p class="card-text">{{{body}}}</p>
        </div>
        <div class="container">
            <span class="text-muted">{{author}}, {{publisher}}, {{day}} {{month}} {{year}}</span>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Harici Linkler
        </div>
        <ul class="list-group list-group-flush">
            {{#each externals}}
                <li class="list-group-item">
                    <a href="{{this.url}}" target="_blank">{{this.title}}</a>
                </li>
            {{/each}}
        </ul>
    </div>
    </div>
    <div class="container mt-5">
        <h2>Not Ekle</h2>
        <form action="/submit" method="post">
            <div class="form-group">
                <label for="title">Başlık</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Konu başlığını buraya yazın">
            </div>
            <div class="form-group">
                <label for="body">Not İçeriği</label>
                <textarea class="form-control" id="body" name="body" rows="3" placeholder="Konu içeriğini buraya yazın"></textarea>
            </div>
            <div class="form-group">
                <label for="publisher">Yayıncı</label>
                <input type="text" class="form-control" id="publisher" name="publisher" placeholder="Yayıncı kim?">
            </div>
            <div class="form-group">
                <label for="author">Yazar</label>
                <input type="text" class="form-control" id="author" name="author" placeholder="Yazar kim?">
            </div>
            <div class="form-group">
                <label for="mediaType">Medya Türü</label>
                <select class="form-control" id="mediaType" name="mediaType">
                    <option value="Gazete">Gazete</option>
                    <option value="Dergi">Dergi</option>
                    <option value="Dijital">Dijital</option>
                    <option value="Kitap">Kitap</option>
                    <option value="Podcast">Podcast</option>
                    <option value="Medium">Medium</option>
                    <option value="Unknown">Bilinmiyor</option>
                </select>
            </div>
            <div class="form-group">
                <label for="year">Yıl</label>
                <input type="number" class="form-control" id="year" name="year" placeholder="Yıl">
            </div>
            <div class="form-group">
                <label for="month">Ay</label>
                <input type="text" class="form-control" id="month" name="month" placeholder="Ay">
            </div>
            <div class="form-group">
                <label for="day">Gün</label>
                <input type="number" class="form-control" id="day" name="day" placeholder="Gün">
            </div>
            <div id="externals-container">
                <label for="externals">Dış Bağlantılar</label>
                <button type="button" id="add-external" class="btn btn-info mb-2">Ekle</button>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
    <script>
        $(document).ready(function() {
            $('#add-external').click(function() {
                const externalHtml = `
                    <div class="form-group">
                        <input type="text" class="form-control mb-2" name="externalTitles[]" placeholder="Başlık">
                        <input type="text" class="form-control mb-2" name="externalUrls[]" placeholder="URL">
                    </div>
                `;
                $('#externals-container').append(externalHtml);
            });
        });
    </script>
</body>
</html>
